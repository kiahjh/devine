{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "../website/*"
      ]
    },
    "skipLibCheck": true
  },
  "include": [
    "../website/next-env.d.ts",
    "../website/**/*.ts",
    "../website/**/*.tsx",
    "../website/.next/types/**/*.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "../website/node_modules"
  ]
}
